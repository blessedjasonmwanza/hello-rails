<article class="post">
  <h3><%= @post.title %>  by <%= @post.author.name %></h3>
  <div class="post-stats">
    <span>Comments <%= @post.comments_counter %> &nbsp;,&nbsp;</span>
    <span>Likes <%= @post.likes_counter %></span>
  </div>
  <p><%= @post.text %></p>
</article>
<ul class="comments">
  <% @post.recent_comments.each do |comment| %>
    <li><%= comment.author.name %>: <%= comment.text %>
  <% end %>
</ul>
<h4>Add comment</h4>
<%= form_for @comment, url:comments_path do |f| %>
  <%= f.hidden_field :author_id, value: @post.author.id %>
  <%= f.hidden_field :post_id, value: @post.id %>
  <%= f.label :text %><br />
  <%= f.text_area :text %><br />
  <%= f.submit "Submit comment", disable_with: 'Submiting Comment...' %>
<% end %>